<launch>

  <!-- =========================== The namespace =========================== -->

  <arg name="namespace" default="/pandora_vision" />


  <!-- ========================= Synchronizer node ========================= -->

  <node name="synchronizer_node"
        type="pandora_vision_hole_exploration_synchronizer_node"
        pkg="pandora_vision_hole_exploration"
        respawn="False"
        ns="$(arg namespace)">

    <!-- The width and height variables needed when in simulation mode -->
    <param name="width" value="640" />
    <param name="height" value="480" />

    <rosparam file="$(find pandora_vision_hole_exploration)/cfg/synchronizer_node_topics.yaml"
              command="load" />
  </node>


  <!-- ============================ Depth node ============================= -->

  <node name="depth_node"
        type="pandora_vision_hole_exploration_depth_node"
        pkg="pandora_vision_hole_exploration"
        respawn="False"
        ns="$(arg namespace)">

    <rosparam file="$(find pandora_vision_hole_exploration)/cfg/depth_node_topics.yaml"
              command="load" ns="$(arg namespace)/pandora_vision_hole_exploration_depth"/>
  </node>


  <!-- ============================= RGB node ============================== -->

  <node name="rgb_node"
        type="pandora_vision_hole_exploration_rgb_node"
        pkg="pandora_vision_hole_exploration"
        respawn="False"
        ns="$(arg namespace)">

    <rosparam file="$(find pandora_vision_hole_exploration)/cfg/rgb_node_topics.yaml"
              command="load" ns="$(arg namespace)/pandora_vision_hole_exploration_rgb"/>
  </node>


  <!-- ========================= Hole Fusion node ========================== -->

  <node name="hole_fusion_node"
        type="pandora_vision_hole_exploration_hole_fusion_node"
        pkg="pandora_vision_hole_exploration"
        respawn="False"
        ns="$(arg namespace)">

    <rosparam file="$(find pandora_vision_hole_exploration)/cfg/hole_fusion_node_topics.yaml"
              command="load" />
  </node>

</launch>

<launch>

  <!-- ======================= Launchers depended on ======================= -->

  <!--State manager and changer -->
  <include file="$(find state_manager)/launch/stateManager.launch" />


  <!-- =========================== The namespace =========================== -->

  <arg name="namespace" default="/pandora_vision" />


  <!-- ========================== Source selection ========================= -->

  <!-- Kinect: choose the openni driver -->
  <arg name="openni" default="false" />

  <group if="$(arg openni)">
    <include file="$(find openni_launch)/launch/openni.launch">
      <arg name="device_id" value="#1" />
      <arg name="camera" value="kinect" />
      <arg name="depth_registration" value="true"/>
    </include>
  </group>


  <!-- Xtion: choose the openni2 driver -->
  <arg name="openni2" default="false" />

  <group if="$(arg openni2)">
    <include file="$(find openni2_launch)/launch/openni2.launch">
      <arg name="device_id" value="#1" />
      <arg name="camera" value="kinect" />
      <arg name="depth_registration" value="true"/>
    </include>
  </group>


  <!-- If the source is not a physical device, it is a bag: play "path" bag -->
  <group unless="$(arg openni)">
    <group unless="$(arg openni2)">

      <arg name="path" default="$(find pandora_vision_hole_exploration)/test/functional/simple_pcl_frame.bag" />

      <node pkg="rosbag" type="play" name="player" output="screen" args="--clock -l $(arg path)" >
        <remap from="/camera/depth_registered/points" to="/kinect/depth_registered/points" />
      </node>

    </group>
  </group>

  <!-- Output selection -->
  <arg name="output" default="screen" />


  <!-- ========================= Synchronizer node ========================= -->

  <node
    name="synchronizer_node"
    type="pandora_vision_hole_exploration_synchronizer_node"
    pkg="pandora_vision_hole_exploration"
    respawn="False"
    output="$(arg output)"
    ns="$(arg namespace)">

    <!-- The width and height variables needed when in simulation mode -->
    <param name="width" value="640" />
    <param name="height" value="480" />

    <rosparam file="$(find pandora_vision_hole_exploration)/cfg/synchronizer_node_topics.yaml"
              command="load" />
  </node>


  <!-- ============================ Depth node ============================= -->

  <node
    name="depth_node"
    type="pandora_vision_hole_exploration_depth_node"
    pkg="pandora_vision_hole_exploration"
    respawn="False"
    output="$(arg output)"
    ns="$(arg namespace)">

    <rosparam file="$(find pandora_vision_hole_exploration)/cfg/depth_node_topics.yaml"
              command="load" ns="$(arg namespace)/pandora_vision_hole_exploration_depth"/>
  </node>


  <!-- ============================= RGB node ============================== -->

  <node
    name="rgb_node"
    type="pandora_vision_hole_exploration_rgb_node"
    pkg="pandora_vision_hole_exploration"
    respawn="False"
    output="$(arg output)"
    ns="$(arg namespace)">

    <rosparam file="$(find pandora_vision_hole_exploration)/cfg/rgb_node_topics.yaml"
              command="load" ns="$(arg namespace)/pandora_vision_hole_exploration_rgb" />
  </node>


  <!-- ========================= Hole Fusion node ========================== -->

  <node
    name="hole_fusion_node"
    type="pandora_vision_hole_exploration_hole_fusion_node"
    pkg="pandora_vision_hole_exploration"
    respawn="False"
    output="$(arg output)"
    ns="$(arg namespace)">

    <rosparam file="$(find pandora_vision_hole_exploration)/cfg/hole_fusion_node_topics.yaml"
              command="load" />
  </node>

</launch>
